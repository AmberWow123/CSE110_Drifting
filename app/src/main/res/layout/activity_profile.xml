<?xml version="1.0" encoding="utf-8"?>
   <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.login.ProfileActivity"
        android:fitsSystemWindows="true"
        android:background="@drawable/profilebg">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="1.0" />

        <TextView
            android:id="@+id/profile_small_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:width="1dp"
            android:background="#000000"
            android:color="#000000"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/profcontent_guideline"
            app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/picguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="210dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profcontent_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.36" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profcontent_guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.62106705" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profcontent_guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75239396" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profcontent_guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.88" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profcontent_guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.49" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="1.0" />

    <ViewSwitcher
        android:id="@+id/my_switcher"
        android:layout_width="169dp"
        android:layout_height="38dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/profile_small_bg"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline_profile"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/username_view"
            android:layout_width="167dp"
            android:layout_height="match_parent"
            android:background="#A6E9F8C6"
            android:backgroundTint="#FBFBFB"
            android:ems="10"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/username_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#A6E9F8C6"
            android:backgroundTint="#FFF9F9"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="username"
            android:textColor="#000000"
            android:textSize="30sp" />

    </ViewSwitcher>

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/profcontent_guideline2"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/profcontent_guideline"
        app:layout_constraintVertical_bias="0.507" />

    <TextView
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/profcontent_guideline3"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/profcontent_guideline2"
        app:layout_constraintVertical_bias="0.562" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/profcontent_guideline4"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/profcontent_guideline3" />

    <TextView
        android:id="@+id/age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/profcontent_guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/profcontent_guideline4" />

    <TextView
        android:id="@+id/country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Country"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/profcontent_guideline5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.41" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <ViewSwitcher
            android:id="@+id/my_switcher_description"
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toTopOf="@+id/profcontent_guideline2"
            app:layout_constraintEnd_toStartOf="@+id/right_guideline_profile"
            app:layout_constraintHorizontal_bias="0.452"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/profcontent_guideline">

            <TextView
                android:id="@+id/description_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/description_text_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ABFFFFFF"
                android:hint="description"
                android:textColor="#FFFFFF" />

        </ViewSwitcher>

        <ViewSwitcher
            android:id="@+id/my_switcher_email"
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toTopOf="@+id/profcontent_guideline3"
            app:layout_constraintEnd_toStartOf="@+id/right_guideline_profile"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/profcontent_guideline2">

            <TextView
                android:id="@+id/email_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/email_text_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ABFFFFFF"
                android:hint="email"
                android:textColor="#FFFFFF" />

        </ViewSwitcher>

        <ViewSwitcher
            android:id="@+id/my_switcher_gender"
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toTopOf="@+id/profcontent_guideline4"
            app:layout_constraintEnd_toStartOf="@+id/right_guideline_profile"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/profcontent_guideline3">

            <TextView
                android:id="@+id/gender_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/gender_text_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ABFFFFFF"
                android:hint="gender"
                android:textColor="#FFFFFF" />

        </ViewSwitcher>

        <ViewSwitcher
            android:id="@+id/my_switcher_age"
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toTopOf="@+id/profcontent_guideline5"
            app:layout_constraintEnd_toStartOf="@+id/right_guideline_profile"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/profcontent_guideline4">

            <TextView
                android:id="@+id/age_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/age_text_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ABFFFFFF"
                android:hint="age"
                android:textColor="#FFFFFF" />

        </ViewSwitcher>

        <ViewSwitcher
            android:id="@+id/my_switcher_country"
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintEnd_toStartOf="@+id/right_guideline_profile"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/profcontent_guideline5">

            <TextView
                android:id="@+id/country_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/country_text_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ABFFFFFF"
                android:hint="country"
                android:textColor="#FFFFFF" />


        </ViewSwitcher>

    <Button
        android:id="@+id/editbutton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/editbutton"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/picguideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/left_guideline_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.697" />

    <Button
        android:id="@+id/settingbutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/ic_menu_sort_by_size"
        app:layout_constraintBottom_toTopOf="@+id/picguideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/picguideline"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline_profile"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/change_avatar"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:text="Change Avatar"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/my_switcher"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image" />

</androidx.constraintlayout.widget.ConstraintLayout>